{
    "name": "QuikTick",
    "description": "Streamline your analysis!",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./icons/dollar16.png",
            "32": "./icons/dollar32.png",
            "48": "./icons/dollar48.png",
            "128": "./icons/dollar128.png"
        }
    },
    "icons": {
        "16": "./icons/dollar16.png",
        "32": "./icons/dollar32.png",
        "48": "./icons/dollar48.png",
        "128": "./icons/dollar128.png"
    },
    "content_scripts": 
	[
		{
			"matches": ["*://*/*"],
            "all_frames": true,
			"js": ["content.js"],
			"run_at" : "document_idle"
		}
	]
  }